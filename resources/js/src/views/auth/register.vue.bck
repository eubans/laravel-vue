                //fields
                user:{
                    name:"",
                    email:"",
                    password:"",
                    password_confirmation:""
                },
                processing:false
            }
        },
        methods:{
            ...mapActions({
                signIn:'auth/login'
            }),
            async register(){
                this.processing = true
                await axios.post('/api/register',this.user).then(response=>{
                    this.signIn()
                }).catch(({response:{data}})=>{
                    alert(data.message)
                }).finally(()=>{
                    this.processing = false
                })
            }
        }
    }
